<!--              <goal>npm</goal>-->
<!--            </goals>-->
<!--            <configuration>-->
<!--              <arguments>run test</arguments>-->
<!--            </configuration>-->
<!--          </execution>-->

        </executions>
      </plugin>

    </plugins>
  </build>

</project>
